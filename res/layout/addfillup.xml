<?xml version="1.0" encoding="UTF-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:fillViewport="true" android:id="@+id/scroll1" android:background="@drawable/activity_background" xmlns:android="http://schemas.android.com/apk/res/android" android:scrollbars="vertical">

	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout1" android:layout_height="fill_parent"
		android:orientation="vertical" >
		<TableLayout android:layout_height="wrap_content"
			android:stretchColumns="1" android:layout_width="fill_parent"
			android:layout_marginTop="5dip" android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip" android:layout_marginBottom="10dip">
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="Date" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:layout_gravity="center_vertical" android:textColor="@color/text_color"/>
				<Button android:id="@+id/dateRefill" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:layout_weight="1" android:layout_marginBottom="5dip" android:layout_marginTop="5dip"/>
				<Button android:id="@+id/now" android:text="Now"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:layout_gravity="center_vertical" android:layout_marginLeft="5dip"/>

			</TableRow>

			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="Odometer*"  android:layout_gravity="center_vertical"  android:layout_height="wrap_content" android:textColor="@color/text_color"
					android:layout_width="wrap_content" />
				<EditText android:id="@+id/odometer" android:textSize="14dip" android:gravity="center_vertical" android:inputType="numberDecimal"
					android:layout_height="37dip" android:layout_width="wrap_content" android:maxLength="8"
					android:layout_weight="1" />
				<TextView android:text="km" android:layout_height="wrap_content" android:id="@+id/disttype" android:textColor="@color/text_color"
					android:layout_width="wrap_content" android:layout_marginLeft="3dip" />

			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="Fuel*"  android:layout_gravity="center_vertical"  android:layout_height="wrap_content" android:textColor="@color/text_color"
					android:layout_width="wrap_content" />
				<EditText android:id="@+id/volume" android:textSize="14dip" android:gravity="center_vertical" android:inputType="numberDecimal"
					android:layout_height="37dip" android:layout_width="wrap_content"
					android:layout_weight="1" />
				<TextView android:text="l" android:layout_height="wrap_content" android:id="@+id/voltype" android:textColor="@color/text_color"
					android:layout_width="wrap_content" android:layout_marginLeft="3dip" />

			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="Volume Price*"  android:layout_gravity="center_vertical"  android:textColor="@color/text_color"
					android:layout_height="wrap_content" android:layout_width="wrap_content" />
				<EditText android:id="@+id/price" android:textSize="14dip" android:gravity="center_vertical" android:inputType="numberDecimal"
					android:layout_height="37dip" android:layout_width="wrap_content"
					android:layout_weight="1" />
				<TextView android:text="USD/l" android:layout_height="wrap_content" android:id="@+id/currencyvoltype" android:textColor="@color/text_color"
					android:layout_width="wrap_content" android:layout_marginLeft="3dip" />

			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="Total Costs"  android:layout_gravity="center_vertical"  android:layout_height="wrap_content" android:textColor="@color/text_color"
					android:layout_width="wrap_content" />
				<EditText android:id="@+id/totalcost" android:textSize="14dip" android:gravity="center_vertical" android:enabled="false"
					android:inputType="numberDecimal" android:layout_height="37dip"
					android:layout_width="wrap_content" android:layout_weight="1" android:focusable="false"/>
				<TextView android:text="USD" android:layout_height="wrap_content" android:id="@+id/currencytype" android:textColor="@color/text_color"
					android:layout_width="wrap_content" android:layout_marginLeft="3dip" />

			</TableRow>
			
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="Current Fuel Level*"  android:layout_gravity="center_vertical"  android:textColor="@color/text_color"
					android:layout_height="wrap_content" android:layout_width="wrap_content" />
				<EditText android:inputType="numberDecimal" android:textSize="14dip" android:gravity="center_vertical"
					android:layout_height="37dip" android:layout_width="wrap_content"
					android:layout_weight="1" android:id="@+id/currentfuel"/>
				<TextView android:text="l" android:layout_height="wrap_content" android:id="@+id/currtvoltype" android:textColor="@color/text_color"
					android:layout_width="wrap_content" android:layout_marginLeft="3dip" />

			</TableRow>
			
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="Note"  android:layout_gravity="center_vertical"  android:layout_height="wrap_content" android:textColor="@color/text_color"
					android:layout_width="wrap_content" />
				<EditText android:id="@+id/note" android:textSize="14dip" android:gravity="center_vertical" android:layout_span="2"
					android:layout_height="37dip" android:layout_width="wrap_content"
					android:layout_weight="1" android:singleLine="true" />


			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="*Required" android:textColor="@color/text_color"
					android:layout_marginTop="10dip" android:layout_height="wrap_content"
					android:layout_width="wrap_content" />



			</TableRow>
		</TableLayout>
